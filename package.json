{
  "name": "merge-cockpit",
  "version": "1.0.0",
  "description": "Git PR management tool with complete visibility and automated workflow",
  "main": "src/main.js",
  "homepage": "./",
  "author": "Your Team",
  "license": "MIT",
  "scripts": {
    "start": "cross-env PORT=7000 react-scripts start",
    "desktop": "electron .",
    "dev": "concurrently \"cross-env PORT=7000 npm start\" \"wait-on http://localhost:7000 && electron .\"",
    "build": "react-scripts build",
    "dist": "npm run build && electron-builder",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:services": "jest --testPathPattern=__tests__/services",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^3.0.1",
    "octokit": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.mergecockpit.app",
    "productName": "Merge Cockpit",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
