# GitHub OAuth Configuration
# Get from: https://github.com/settings/developers
REACT_APP_GITHUB_CLIENT_ID=your_github_oauth_client_id
REACT_APP_GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Google OAuth Configuration  
# Get from: https://console.cloud.google.com
REACT_APP_GOOGLE_CLIENT_ID=your_google_oauth_client_id
REACT_APP_GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# GitHub Token (Fallback Authentication)
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# Feature Flags
REACT_APP_ENABLE_AUTO_SYNC=true
REACT_APP_SYNC_INTERVAL_MS=30000

# AI/Local LLM (Ollama)
# Set to true if you have Ollama installed locally
# Get Ollama: https://ollama.ai
REACT_APP_OLLAMA_ENABLED=false
REACT_APP_OLLAMA_URL=http://localhost:11434
REACT_APP_OLLAMA_MODEL=mistral

# Ollama advanced settings (optional)
# REACT_APP_OLLAMA_TIMEOUT_MS=30000
# REACT_APP_OLLAMA_CHECK_INTERVAL_MS=60000
# REACT_APP_OLLAMA_CHECK_INTERVAL_MS=60000
# REACT_APP_OLLAMA_CACHE_AGE_HOURS=24

# Logging
LOG_LEVEL=info
